<% params.fetch("number_of_dice") %>

<h1><%=@num_dice%>d<%=@sides%></h1>

 <%@rolls=[]%>

  <%@num_dice.times do%>
    <%die=rand(1..@sides)%>

    <%@rolls.push(die)%>
  <%end%>

<ul>
  <% @rolls.each do |a_roll|%>
  <li>
    <%= a_roll%>
  </li>
  <% end %>
</ul>
